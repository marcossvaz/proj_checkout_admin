generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Attribute {
  id     String   @id @default(uuid())
  name   String
  active Boolean?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  value_attribute AttributeValue[]
}

model AttributeValue {
  id           String   @id @default(uuid())
  id_attribute String
  value        String
  active       Boolean?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  attribute Attribute @relation(fields: [id_attribute], references: [id])

  @@map("attributes_values")
}

model Category {
  id     String  @id @default(uuid())
  name   String
  active Boolean

  products Product[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String?
  active      Boolean

  variants Variants[]

  id_category String
  category    Category @relation(fields: [id_category], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Variants {
  id     String   @id @default(uuid())
  sku    String
  price  Float
  stock  Float
  active Boolean?
  combo  Boolean
  value  Float?

  id_product String
  product    Product @relation(fields: [id_product], references: [id])

  value_variants VariantsValue[]

  height Float
  width  Float
  weight Float
  length Float

  json_feature    Json
  main            Boolean
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}

model VariantsValue {
  id                 String  @id @default(uuid())
  id_value_attribute String
  active             Boolean

  id_variant String
  variant    Variants @relation(fields: [id_variant], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
